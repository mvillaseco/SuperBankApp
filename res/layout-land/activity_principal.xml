<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerVertical="true"
    android:background="@color/negro"
    tools:context=".PrincipalActivity" >

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="AdministraciÃ³n Bancaria"    
        style="@style/ButtonText"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"  />

    <Button
        android:id="@+id/SelBank"
        android:layout_width="wrap_content"        
        android:minWidth="180dp"        
        android:layout_height="wrap_content"
        android:layout_below="@+id/Titulo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blancoReal"
        android:layout_marginTop="16dp"    
        style="@style/ButtonText"
        android:text="@string/SelBank"
        android:background="@drawable/buttonsdrawable"
        android:onClick="selectBank" />  

    <Button
        android:id="@+id/GlobalMoney"
        android:layout_width="wrap_content"        
        android:minWidth="180dp"    
        android:layout_height="wrap_content"
        android:layout_below="@+id/SelBank"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blancoReal"
        android:layout_marginTop="15dp"        
        android:layout_centerVertical="true"
       	style="@style/ButtonText"
        android:text="@string/GlobalMoney"
        android:background="@drawable/buttonsdrawable"
        android:onClick="getGlobalMoney" />
    
      <Button
        android:id="@+id/Dolar"
        android:layout_width="wrap_content" 
        android:minWidth="180dp"    
        android:layout_height="wrap_content"        
        android:layout_below="@+id/GlobalMoney"
        android:textColor="@color/blancoReal"
        android:layout_marginTop="15dp"    
        style="@style/ButtonText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/Dolar"
        android:background="@drawable/buttonsdrawable"
        android:onClick="dolarBlue" />
</RelativeLayout>