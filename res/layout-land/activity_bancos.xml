<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BancosActivity" >

    <TextView
        android:id="@+id/TituloBancos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        style="@style/ButtonText"
        android:text="@string/TituloBancos"
        android:textSize="24dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/BBVA"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TituloBancos"
        android:layout_centerHorizontal="true"
        android:tag="1"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonsdrawable"        
        style="@style/ButtonText"
        android:textColor="@color/blancoReal"
        android:text="@string/BBVA"
        android:onClick="seleccionBanco" />  

    <Button
        android:id="@+id/Santander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:layout_below="@+id/BBVA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"        
        android:layout_centerVertical="true"
        android:tag="2"
        android:textColor="@color/blancoReal"
        android:background="@drawable/buttonsdrawable"        
        style="@style/ButtonText"
        android:text="@string/Santander"
        android:onClick="seleccionBanco" />
    
      <Button
        android:id="@+id/Galicia"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/Santander"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:tag="3"
        android:text="@string/Galicia"
        android:background="@drawable/buttonsdrawable"        
        style="@style/ButtonText"
        android:textColor="@color/blancoReal"
        android:onClick="seleccionBanco" />

</RelativeLayout>