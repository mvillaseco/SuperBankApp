<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/rojoMakingPressed"
                android:endColor="@color/rojoMakingPressed"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/rojoMakingPressed" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
      <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/blancoReal"
                android:startColor="@color/negro"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/manteca" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/icono"
                android:startColor="@color/icono"
                android:angle="270" />
            <stroke
                android:width="3dp"            
                android:color="@color/icono" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>